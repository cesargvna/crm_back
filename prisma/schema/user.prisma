model User {
  id              String       @db.VarChar(255) @id  @default(uuid())
  status          Boolean      @default(true) 
  username        String       @db.VarChar(10) 
  password        String       @db.VarChar(255)
  name            String       @db.VarChar(20) 

  lastname        String?      @db.VarChar(20)
  ci              String?      @db.VarChar(20)
  nit             String?      @db.VarChar(20)
  description     String?      @db.VarChar(100)
  address         String?      @db.VarChar(100)
  cellphone       String?      @db.VarChar(20)
  telephone       String?      @db.VarChar(20)
  email           String?      @db.VarChar(20)

  created_at      DateTime     @default(now())
  updated_at      DateTime     @updatedAt

  role            Role         @relation(fields: [roleId], references: [id])
  roleId          String       @db.VarChar(255)

  subsidiary      Subsidiary   @relation(fields: [subsidiaryId], references: [id])
  subsidiaryId    String       @db.VarChar(255)

  tenantId        String?      @db.VarChar(255) // ðŸ‘‰ agregado sin relaciÃ³n
  
  schedulesUsers  ScheduleUser[]
  cashSessions    CashSession[] 
  sales           Sale[]
  expenses        Expense[]
  incomes         Income[]
  purchases       Purchase[]

  @@unique([username, tenantId])
  @@index([tenantId]) // âœ… Ã­ndice por tenantId
}

model ScheduleUser {
  id                String        @id @db.VarChar(255) @default(uuid())
  status            Boolean       @default(true)
  start_day         DayOfWeek?
  end_day           DayOfWeek?
  opening_hour      DateTime?
  closing_hour      DateTime?
  
  created_at        DateTime      @default(now())
  updated_at        DateTime      @updatedAt

  tenantId          String       @db.VarChar(255) // ðŸ‘‰ agregado sin relaciÃ³n

  user              User          @relation(fields: [userId], references: [id])
  userId            String        @db.VarChar(255)

  @@index([tenantId]) // âœ… Ã­ndice por tenantId
}

enum DayOfWeek {
  LUNES
  MARTES
  MIERCOLES
  JUEVES
  VIERNES
  SABADO
  DOMINGO
}